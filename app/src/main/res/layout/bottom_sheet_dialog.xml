<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/bottom_sheet_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_set_title_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_sheet_img"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="please enter the title for anniversary"
            android:textColor="@color/pink_primary"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/bottom_sheet_et"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_set_title_hint"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_bottom_sheet_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_sheet_et"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/btn_bottom_sheet_ok"
            android:layout_toStartOf="@+id/btn_bottom_sheet_ok"
            android:text="cancel"
            android:textColor="@color/pink_primary" />


        <Button
            android:id="@+id/btn_bottom_sheet_ok"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_bottom_sheet_cancel"
            android:layout_alignBottom="@+id/btn_bottom_sheet_cancel"
            android:layout_alignEnd="@+id/bottom_sheet_et"
            android:layout_alignRight="@+id/bottom_sheet_et"
            android:text="ok"
            android:textColor="@color/pink_primary" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
